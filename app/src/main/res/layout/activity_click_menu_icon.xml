<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".click_menu_icon"
    android:background="@drawable/back">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFA94D"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        tools:layout_editor_absoluteY="1dp" />

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigator"
        android:layout_width="325dp"
        android:layout_height="734dp"
        android:background="#FFCE99"
        app:itemBackground="@drawable/back"
        app:itemIconTint="?attr/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="315dp"
            android:layout_height="275dp"
            android:src="@drawable/backrote"
            android:layout_marginStart="5dp"
            android:layout_marginTop="-08dp"/>

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/reduser"
            android:layout_marginStart="15dp"
            android:layout_marginTop="50dp"/>

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="130dp"
            android:fontFamily="@font/habibi"
            android:text="User Name"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="155dp"
            android:fontFamily="@font/habibi"
            android:text="Phone Number"
            android:textColor="#808080"
            android:textSize="16sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/loginid"
            android:layout_width="119dp"
            android:layout_height="37dp"
            android:layout_marginStart="195dp"
            android:layout_marginTop="175dp"
            android:background="#EA5B2D"
            android:text="View Profile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="235dp"
            android:fontFamily="@font/habibi"
            android:text="Home"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/myrec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="295dp"
            android:fontFamily="@font/habibi"
            android:text="My Recipes"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/myfav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="355dp"
            android:fontFamily="@font/habibi"
            android:text="My Favorites"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/todolist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="415dp"
            android:fontFamily="@font/habibi"
            android:text="To-Do List"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="475dp"
            android:fontFamily="@font/habibi"
            android:text="Tips"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/mytips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="535dp"
            android:fontFamily="@font/habibi"
            android:text="My Tips"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="321dp"
            android:layout_height="26dp"
            android:layout_marginStart="-2dp"
            android:layout_marginTop="660dp"
            android:fontFamily="@font/habibi"
            android:text=" Best recipes around the world at your fingertips!"
            android:textAlignment="center"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/circle"
            app:layout_constraintVertical_bias="0.551" />



    </com.google.android.material.navigation.NavigationView>

</androidx.constraintlayout.widget.ConstraintLayout>