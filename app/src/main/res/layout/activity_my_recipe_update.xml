<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyRecipeUpdate">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/create_recipe_bgimage">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/createrecipe1_uingredients2"
                android:layout_width="317dp"
                android:layout_height="46dp"
                android:text="   Create Recipe"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:orientation="horizontal">



                <Button
                    android:id="@+id/umyeditbutton2"
                    android:layout_width="27dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_baseline_edit_24"
                    tools:layout_editor_absoluteX="354dp"
                    tools:layout_editor_absoluteY="1dp" />

            </LinearLayout>


            <EditText
                android:id="@+id/umcreatevtitle"
                android:layout_width="314dp"
                android:layout_height="58dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:background="@drawable/create_recipe_myrecipe_search"
                android:backgroundTint="@color/colorAccent"
                android:ems="10"
                android:fontFamily="sans-serif-black"
                android:gravity="start|top"
                android:inputType="textMultiLine"

                android:padding="10dp"

                android:text="title"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="30sp" />


            <ImageView
                android:id="@+id/umvimage"
                android:layout_width="266dp"
                android:layout_height="165dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:padding="10dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/create_recipe_myrecipe_search"/>

            <TextView
                android:id="@+id/umvrecipedes"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-light"
                android:text="Description"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/umcreatvdescription"
                android:layout_width="368dp"
                android:layout_height="231dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:background="@drawable/create_recipe_myrecipe_search"
                android:backgroundTint="#99FFC594"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:padding="10dp" />



            <TextView
                android:id="@+id/umcreatevnameingredients"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-light"
                android:text="Ingredients"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/umcreatvingredients"
                android:layout_width="258dp"
                android:layout_height="132dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:background="@drawable/create_recipe_myrecipe_search"
                android:backgroundTint="#99FFC594"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:padding="10dp" />

            <TextView
                android:id="@+id/umcreaterecipe_procedure1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-light"
                android:text="Procedure"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/umcratevprocedure"
                android:layout_width="353dp"
                android:layout_height="231dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:background="@drawable/create_recipe_myrecipe_search"
                android:backgroundTint="#99FFC594"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:padding="10dp" />







        </LinearLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>