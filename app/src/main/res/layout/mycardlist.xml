<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:layout_marginStart="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="2dp"
    android:layout_marginBottom="297dp"
    android:background="@drawable/selectioncolor"
    app:cardBackgroundColor="@color/common_google_signin_btn_text_dark_disabled"
    app:layout_constraintBottom_toTopOf="@+id/button2"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="286dp"

        android:background="@drawable/create_recipe_box1"
        android:backgroundTint="#FFFFFF"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/mylistImage"
            android:layout_width="370dp"
            android:layout_height="159dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:srcCompat="@mipmap/add_btn" />

        <TextView
            android:id="@+id/mylisttitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/create_recipe_box1"
            android:backgroundTint="#8FC3CA"
            android:fontFamily="monospace"
            android:padding="10dp"
            android:text="Title"
            android:textColor="@color/colorAccent"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mylistdes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp"
            android:text="description"
            android:textColor="#AD252222"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/mylistingredients"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp"
            android:text="Ingredients"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="12dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/mylistprocedure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp"
            android:text="Procedure"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="12dp"
            android:visibility="invisible" />


    </LinearLayout>

</androidx.cardview.widget.CardView>
