<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="@drawable/create_recipe_bgimage"
    app:cardBackgroundColor="@color/common_google_signin_btn_text_dark_disabled">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <ImageView
            android:id="@+id/mylistImage"
            android:layout_width="370dp"
            android:layout_height="159dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:srcCompat="@mipmap/add_btn" />

        <TextView
            android:id="@+id/mylisttitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="food"
            android:textColor="@color/colorPrimary"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mylistdes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp"
            android:text="description jhd  bsiufe"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/mylistingredients"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp"
            android:text="Ingredients"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="12dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/mylistprocedure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp"
            android:text="Procedure"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="12dp"
            android:visibility="invisible" />


    </LinearLayout>
</androidx.cardview.widget.CardView>