<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".crearerecipesingleview">





    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/create_recipe_bgimage">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/mycreaterecipe1_ingredients2"
                android:layout_width="317dp"
                android:layout_height="46dp"
                android:text="   Create Recipe"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/mydeletebutton"
                    android:layout_width="36dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_baseline_delete_outline_24"
                    tools:layout_editor_absoluteX="303dp"
                    tools:layout_editor_absoluteY="3dp" />

                <Button
                    android:id="@+id/myeditbutton2"
                    android:layout_width="27dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_baseline_edit_24"
                    tools:layout_editor_absoluteX="354dp"
                    tools:layout_editor_absoluteY="1dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/createrecipe1_createrecipeuploadimage"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-light"
                android:text="Upload Image"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/createvimage"
                android:layout_width="99dp"
                android:layout_height="91dp"
                android:layout_gravity="center"
                android:background="@drawable/unnamed" />

            <TextView
                android:id="@+id/createvnameingredients"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-light"
                android:text="Ingredients"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/creatvingredients"
                android:layout_width="258dp"
                android:layout_height="132dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:background="@drawable/create_recipe_box1"
                android:backgroundTint="#99FFC594"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine" />

            <TextView
                android:id="@+id/createrecipe_procedure1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-light"
                android:text="Procedure"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/cratevprocedure"
                android:layout_width="353dp"
                android:layout_height="231dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:background="@drawable/create_recipe_box1"
                android:backgroundTint="#99FFC594"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine" />

            <TextView
                android:id="@+id/createrecipe_Title"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-light"
                android:text="Title"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/createvtitle"
                android:layout_width="314dp"
                android:layout_height="58dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:background="@drawable/create_recipe_box1"
                android:backgroundTint="#99FFC594"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine" />



            <TextView
                android:id="@+id/createrecipe_Description2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-light"
                android:text="Description"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/creatvdescription"
                android:layout_width="368dp"
                android:layout_height="231dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:background="@drawable/create_recipe_box1"
                android:backgroundTint="#99FFC594"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine" />






        </LinearLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>